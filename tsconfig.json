{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@app/*": ["src/*"],
      "@dto": ["src/dto/index"],
      "@libs": ["src/libs/index"],
      "@config": ["src/config/index"],
      "@entities": ["src/entities/index"],
      "@services": ["src/services/index"],
      "@repositories": ["src/repositories/index"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
